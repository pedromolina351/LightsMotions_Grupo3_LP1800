#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>
#include<string.h>

int main(){
      char instruccion[10];
      int letra;
    	int i=0;
      int j=0;
      
      printf("Ingrese las Instrucciones");
      
      while(i<10){
	         char instruc;
	         fflush(stdin);
           gets(instruc);
	         letra = instruc;
	         instruccion[i]= instruc;
	    
			if(letra>='0' && letra <='9') {
				j++;
				i = 11;
			}
			else {
				
				i++;
				j++;
			};
	  }
}
