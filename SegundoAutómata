#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>
#include<string.h>

int main(){
      enum TEstados{f1,f2,f3,f4,fe}Estado:
      Estado= f1;
      char instruccion[10];
      int letra;
    	int i=0;
      int j=0;
      int simbolo;
      bool = Esnumero;
      
      printf("Ingrese las Instrucciones");
      
      while(i<10){
	         char instruc;
	         fflush(stdin);
           gets(instruc);
	         letra = instruc;
	         instruccion[i]= instruc;
	    
			if(letra>='0' && letra <='9') {
				j++;
				i = 11;
			}
			else {
				
				i++;
				j++;
			};
	  }
	  
	  int iterador = 0;
	  while(iterador <= j && Estado != fe){
	  switch(Estado){
			case f1:
			
				if (strcmp(Instruccion[iterador],"Encendido") == 0 || strcmp(Instruccion[iterador],"encendido") == 0 || strcmp(Instruccion[iterador],"Encender") == 0) {
					Estado = f2;
				}
				else {
					Estado = fe;
					break;
			             }
			break;
			
			case f2:
			
				if (Instruccion[iterador][0] == '+' || Instruccion[iterador][0] == '-') {
					Estado = f3;
				}
				else {
					Estado = fe;
				break;
				}
			break;
			
			case f3:
				
				simbolo = Instruccion[iterador][0];
				EsNumero = (simbolo >= 0 && simbolo <= 9);
				if (EsNumero == true || EsNumero==0) {
					Estado = f4;
				}
				else {
					Estado = fe;
				};
				break;
			
			
			}
		iterador ++;
		}
	  
}
